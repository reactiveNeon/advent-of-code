# Java Language Justfile
# Works for any year

# Get the root directory and language template directory
root_dir := justfile_directory() / ".." / ".."
template_dir := justfile_directory() / "template"

# Create a new day
create year day:
  #!/usr/bin/env bash
  set -euo pipefail
  
  day_dir="{{root_dir}}/{{year}}/{{day}}/java"
  mkdir -p "$day_dir/inputs"
  
  # Copy template files
  cp {{template_dir}}/Part1.java "$day_dir/"
  cp {{template_dir}}/Part2.java "$day_dir/"
  cp {{template_dir}}/Part1Test.java "$day_dir/"
  cp {{template_dir}}/Part2Test.java "$day_dir/"
  
  # Create empty input files
  touch "$day_dir/inputs/input1.txt"
  touch "$day_dir/inputs/input2.txt"
  touch "$day_dir/inputs/test1.txt"
  touch "$day_dir/inputs/test2.txt"
  
  echo "Created {{year}}/{{day}}/java with template files"

# Get inputs for a day
get-inputs year day:
  {{root_dir}}/scripts/get-inputs.sh --day {{day}} --year {{year}} --root-dir {{root_dir}}/{{year}}/{{day}}/java

# Run a solution
run year day part:
  @cd {{root_dir}}/{{year}}/{{day}}/java && java Part{{part}}.java

# Test a specific part
test year day part:
  @cd {{root_dir}}/{{year}}/{{day}}/java && java -ea Part{{part}}Test.java

# Test all parts
test-all year day:
  #!/usr/bin/env bash
  set -euo pipefail
  cd {{root_dir}}/{{year}}/{{day}}/java
  java Part1Test.java
  java Part2Test.java
