# Go Language Justfile
# Works for any year

# Get the root directory and language template directory
root_dir := justfile_directory() / ".." / ".."
template_dir := justfile_directory() / "template"

# Create a new day
create year day:
  #!/usr/bin/env bash
  set -euo pipefail
  
  day_dir="{{root_dir}}/{{year}}/{{day}}/go"
  mkdir -p "$day_dir/inputs"
  
  # Copy and process templates
  for template in {{template_dir}}/*.tmpl; do
    filename=$(basename "$template" .tmpl)
    if [[ "$filename" == "go.mod" ]]; then
      sed 's/{{{{.Day}}}}/{{day}}/g' "$template" > "$day_dir/$filename"
    else
      cp "$template" "$day_dir/$filename"
    fi
  done
  
  # Create empty input files
  touch "$day_dir/inputs/input.txt"
  touch "$day_dir/inputs/test.txt"
  
  echo "Created {{year}}/{{day}}/go with template files"

# Get inputs for a day
get-inputs year day:
  {{root_dir}}/scripts/get-inputs.sh --day {{day}} --year {{year}} --root-dir {{root_dir}}/{{year}}/{{day}}/go

# Run a solution
run year day part:
  @cd {{root_dir}}/{{year}}/{{day}}/go && go run part{{part}}.go

# Test a specific part
test year day part:
  @cd {{root_dir}}/{{year}}/{{day}}/go && go test -v -run TestPart{{part}}

# Test all parts
test-all year day:
  @cd {{root_dir}}/{{year}}/{{day}}/go && go test -v
